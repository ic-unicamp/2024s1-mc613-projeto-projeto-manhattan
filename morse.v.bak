module morse (
    input reset,
    input clk,
    input button0,

    output reg dot_out,
    output reg dash_out,
    output reg [6:0] HEX0
);

reg read;
wire dot;
wire dash;
wire writing;
wire [3:0] tempo;

timer inst_timer(
    .numero(tempo),
    .segmentos(HEX0)
);

timing inst_timing (    
    // inputs
    .button(button0),
    .clk(clk),
    .reset(reset),
    .read(read),

    // outputs
    .t(tempo),
    .dot(dot),
    .dash(dash),
    .writing(writing)
);

always @(posedge clk) begin    
    if (reset) begin
        read = 0;
    end else begin
        if (writing) begin
            dot_out = dot;
            dash_out = dash; 
            read = 1;
        end else begin
            read = 0;
        end
    end
end

endmodule